{
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "target": "ES5",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
