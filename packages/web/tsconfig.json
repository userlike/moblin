{
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "target": "ES5",
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
