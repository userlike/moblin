{
  "include": ["../src/**/*", "../stories/**/*"],
  "compilerOptions": {
    "rootDir": "../",
    "composite": true,
    "incremental": true,
    "target": "ES5",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "references": [{ "path": "../../core" }]
}
