{
  "name": "@moblin/chakra-ui",
  "version": "0.1.1",
  "description": "Moblin layout system for chakra-ui",
  "author": "Anil Anar",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "concurrently npm:build:*",
    "test": "jest --env=jsdom --passWithNoTests",
    "lint": "eslint src --ext .ts,.tsx",
    "prepare": "npm build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build:esm": "cross-env BABEL_ENV=esm babel src --extensions .ts,.tsx -d dist/esm --source-maps",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --extensions .ts,.tsx -d dist/cjs --source-maps",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "rush": "node ../../common/scripts/install-run-rush.js"
  },
  "peerDependencies": {
    "react": ">=16",
    "@chakra-ui/react": "^1.6.0",
    "@chakra-ui/system": "^1.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/chakra-ui.cjs.production.min.js",
      "limit": "2 KB",
      "ignore": [
        "@chakra-ui/system",
        "react"
      ]
    },
    {
      "path": "dist/chakra-ui.esm.js",
      "limit": "2 KB",
      "ignore": [
        "@chakra-ui/system",
        "react"
      ]
    }
  ],
  "devDependencies": {
    "@babel/core": "~7.15.5",
    "@chakra-ui/react": "~1.6.8",
    "@chakra-ui/system": "~1.7.3",
    "@emotion/react": "~11.4.1",
    "@emotion/styled": "~11.3.0",
    "@size-limit/preset-small-lib": "~5.0.5",
    "@storybook/addon-essentials": "~6.4.0-beta.3",
    "@storybook/addon-info": "~5.3.21",
    "@storybook/addon-links": "~6.4.0-beta.3",
    "@storybook/addons": "~6.4.0-beta.3",
    "@storybook/react": "~6.4.0-beta.3",
    "@types/react": "~17.0.27",
    "@types/react-dom": "~17.0.9",
    "babel-loader": "~8.2.2",
    "chromatic": "~5.9.2",
    "eslint-plugin-simple-import-sort": "~7.0.0",
    "framer-motion": "~4.1.17",
    "husky": "~7.0.2",
    "react": "~17.0.2",
    "react-dom": "~17.0.2",
    "react-is": "~17.0.2",
    "size-limit": "~5.0.5",
    "tslib": "~2.3.1",
    "typescript": "~4.4.3",
    "eslint": "~7.32.0",
    "prettier": "~2.4.1",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-prettier": "~4.0.0",
    "eslint-plugin-react": "~7.26.1",
    "eslint-plugin-react-hooks": "~4.2.0",
    "@typescript-eslint/eslint-plugin": "~4.33.0",
    "@typescript-eslint/parser": "~4.33.0",
    "jest": "~27.2.4",
    "@babel/cli": "~7.15.7",
    "@babel/runtime": "~7.15.4",
    "cross-env": "~7.0.3",
    "rimraf": "~3.0.2",
    "concurrently": "~6.3.0",
    "eslint-plugin-testing-library": "~4.12.4"
  }
}
