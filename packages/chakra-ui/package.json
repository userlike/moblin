{
  "version": "0.1.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint src",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16",
    "@chakra-ui/react": "^1.6.0",
    "@chakra-ui/system": "^1.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@moblin/chakra-ui",
  "author": "Anil Anar",
  "module": "dist/chakra-ui.esm.js",
  "size-limit": [
    {
      "path": "dist/chakra-ui.cjs.production.min.js",
      "limit": "2 KB",
      "ignore": [
        "@chakra-ui/system",
        "react"
      ]
    },
    {
      "path": "dist/chakra-ui.esm.js",
      "limit": "2 KB",
      "ignore": [
        "@chakra-ui/system",
        "react"
      ]
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@chakra-ui/react": "^1.6.8",
    "@chakra-ui/system": "^1.7.3",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@size-limit/preset-small-lib": "^5.0.5",
    "@storybook/addon-essentials": "^6.4.0-beta.3",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.4.0-beta.3",
    "@storybook/addons": "^6.4.0-beta.3",
    "@storybook/react": "^6.4.0-beta.3",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.9.2",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "framer-motion": "^4",
    "husky": "^7.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "size-limit": "^5.0.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  }
}
