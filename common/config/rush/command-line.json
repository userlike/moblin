{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/command-line.schema.json",

  "commands": [
    {
      "commandKind": "bulk",
      "name": "lint",
      "summary": "Lint each project",
      "enableParallelism": true,
      "ignoreMissingScript": true
    },
    {
      "commandKind": "bulk",
      "name": "test",
      "summary": "Test each project",
      "enableParallelism": false,
      "ignoreMissingScript": true
    },
    {
      "commandKind": "bulk",
      "name": "size",
      "summary": "Validate each project's bundle size limits",
      "enableParallelism": true,
      "ignoreMissingScript": true,
      "allowWarningsInSuccessfulBuild": true
    },
    {
      "name": "lint-staged",
      "commandKind": "bulk",
      "summary": "Used by the pre-commit Git hook. This command invokes lint-staged.",
      "safeForSimultaneousRushProcesses": false,
      "ignoreMissingScript": true,
      "enableParallelism": false
    }
  ],

  "parameters": []
}
